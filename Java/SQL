SQL 

Operação Seleção

SELECT * FROM PRODUCT, CATEGORY

Operação Junção

SELECT *
FROM PRODUCT, CATEGORY
WHERE PRODUCT.CATEGORY_ID = CATEGORY.ID

SELECT * 
FROM PRODUCT
INNER JOIN  CATEGORY cat ON PRODUCT.CATEGORY_ID = cat.ID

Operação Restrição

SELECT * 
FROM PRODUCT
INNER JOIN  CATEGORY cat ON PRODUCT.CATEGORY_ID = cat.ID
WHERE CATEGORY.NAME = 'Computers'

Operação 

SELECT PRODUCT.*, CATEGORY.NAME 
FROM PRODUCT
INNER JOIN  CATEGORY cat ON PRODUCT.CATEGORY_ID = cat.ID
WHERE CATEGORY.NAME = 'Computers'